{
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "client", "dist", "server/routes_clean.ts", "server/routes_end.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "rootDir": ".",
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  }
}
